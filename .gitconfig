[user]
  name = Griffin
  email = griffin.higgins@unb.ca

[core]
  editor = nvim
  pager = delta

[alias]
  lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold yellow)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(blue)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold magenta)%d%C(reset)' --all
  lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
  lg = !"git lg1"

[init]
  defaultBranch = main

[include]
  path = /home/griffin/.dotfiles/.delta/themes.config

[interactive]
  diffFilter = delta --color-only

[delta]
  features = alpha

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default
[credential "https://github.com"]
	helper = 
	helper = !/home/linuxbrew/.linuxbrew/Cellar/gh/2.21.2/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/home/linuxbrew/.linuxbrew/Cellar/gh/2.21.2/bin/gh auth git-credential
